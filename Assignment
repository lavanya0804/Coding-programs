#include <stdio.h>
#include<string.h>

int main()
{
    char str1[100];
    int i;
    printf("\n enter string that u want to covert into uppercase");
    gets(str1);
    for(i=0;str1[i]='\0';i++)
    {
        if(str1[i]>='a' && str1[i]<='z')
        {
            if(i/2!=0)
            str1[i]=str1[i]-32;
        }
    }
    printf("\n the given string in uppercase=%s",str1);
    return 0;
}
